<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:windowBackground">@color/surfaceColor</item>

        <item name="android:textViewStyle">@style/DefaultTextViewStyle</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="DefaultTextViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/jalnan</item>
        <item name="android:textColor">@color/onSurfaceColorHigh</item>
    </style>
</resources>