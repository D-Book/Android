<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/emailId"
        android:layout_width="110pt"
        android:layout_height="30pt"
        android:layout_gravity="center"
        android:layout_marginHorizontal="40dp"
        android:layout_marginBottom="38dp"
        android:background="@drawable/edit_text_rounded"
        android:textColorHint="@color/onSurfaceColorDisabled"
        app:boxBackgroundColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/btn_start_dbook"
        app:layout_constraintEnd_toEndOf="@+id/btn_start_dbook"
        app:layout_constraintStart_toStartOf="@+id/btn_start_dbook">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/edit_text_rounded"
            android:fontFamily="@font/jalnan"
            android:gravity="center"
            android:hint="이름"
            android:textColor="@color/onSurfaceColorHigh" />
    </com.google.android.material.textfield.TextInputLayout>

    <ImageButton
        android:id="@+id/profile_image"
        android:layout_width="114dp"
        android:layout_height="118dp"
        android:layout_gravity="center"
        android:background="@drawable/profile"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="243dp"
        tools:layout_editor_absoluteY="156dp" />

    <ImageButton
        android:id="@+id/back_sign_up"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/ic_arrow_back_24"
        app:layout_constraintHeight_percent="0.057"
        app:layout_constraintWidth_percent="0.057"
        tools:layout_editor_absoluteX="82dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_start_dbook"
        android:layout_width="346dp"
        android:layout_height="65dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="300dp"
        android:background="@drawable/bg_secondary_rounded_16dp"
        android:fontFamily="@font/jalnan"
        android:text="D-book 시작하기"
        android:textColor="@color/onSecondaryColorHigh"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>